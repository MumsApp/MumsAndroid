<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/card_squared">

    <android.support.constraint.ConstraintLayout
        style="@style/widget_layout"
        android:paddingBottom="@dimen/padding_big">

        <com.mumsapp.android.ui.views.CircleImageView
            android:id="@+id/lobby_cell_image"
            android:layout_marginTop="@dimen/padding_default"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/avatar_image_view" />

        <com.mumsapp.android.ui.views.BaseTextView
            android:id="@+id/lobby_cell_title"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/padding_default"
            app:layout_constraintTop_toTopOf="@id/lobby_cell_image"
            app:layout_constraintLeft_toRightOf="@id/lobby_cell_image"
            app:layout_constraintRight_toLeftOf="@id/lobby_cell_checkbox"
            tools:text="Expectant Moms" />

        <com.mumsapp.android.ui.views.BaseCheckbox
            android:id="@+id/lobby_cell_checkbox"
            style="@style/star_checkbox"
            android:layout_marginTop="@dimen/padding_small"
            app:layout_constraintTop_toBottomOf="@id/lobby_cell_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lobby_cell_title"
            tools:checked="true"/>

        <com.mumsapp.android.ui.views.BaseTextView
            android:id="@+id/lobby_cell_description"
            style="@style/text_small_grey_light"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/padding_small"
            app:layout_constraintLeft_toLeftOf="@id/lobby_cell_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lobby_cell_title"
            tools:text="@string/template_long_text" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>