<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_layout">

    <com.mumsapp.android.ui.views.TopBar
        android:id="@+id/mums_app_offers_top_bar"
        style="@style/top_bar_title"
        app:layout_constraintTop_toTopOf="parent"
        app:topBarTitle="@string/mumsapp_offers" />

    <android.support.v4.widget.NestedScrollView
        style="@style/scroll_with_recycler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mums_app_offers_top_bar">

        <LinearLayout
            style="@style/default_scroll_layout"
            android:orientation="vertical">

            <com.mumsapp.android.ui.views.CardsRecyclerView
                android:id="@+id/mums_app_offers_recycler_view"
                style="@style/recycler_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/cell_chat_list"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_scroll_view_bottom"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>