<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_layout"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_default"
    android:paddingBottom="@dimen/padding_default">

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/cell_schools_widget_delete"
        style="@style/text_tiny_green_light"
        android:text="@string/delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/cell_schools_widget_school_name"
        style="@style/text_tiny_grey_light"
        android:layout_marginEnd="@dimen/padding_big"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@id/cell_schools_widget_delete"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cell_schools_widget_delete"
        app:layout_constraintTop_toTopOf="@id/cell_schools_widget_delete"
        tools:text="St. Barnabas Church of England Primary" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/cell_schools_widget_follow_label"
        style="@style/text_tiny_black"
        android:paddingEnd="@dimen/padding_medium"
        android:text="@string/follow"
        app:layout_constraintTop_toTopOf="@+id/cell_schools_widget_follow_switch"
        app:layout_constraintBottom_toBottomOf="@+id/cell_schools_widget_follow_switch"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.mumsapp.android.ui.views.BaseSwitch
        android:id="@+id/cell_schools_widget_follow_switch"
        style="@style/switch_green"
        android:layout_marginTop="@dimen/padding_medium"
        app:layout_constraintTop_toBottomOf="@id/cell_schools_widget_school_name"
        app:layout_constraintLeft_toRightOf="@id/cell_schools_widget_follow_label"/>
</android.support.constraint.ConstraintLayout>