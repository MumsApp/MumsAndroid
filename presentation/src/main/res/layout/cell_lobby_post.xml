<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/widget_layout"
    android:paddingBottom="@dimen/padding_12dp"
    android:paddingEnd="0dp"
    android:paddingStart="0dp">

    <com.mumsapp.android.ui.views.CircleImageView
        android:id="@+id/cell_lobby_post_avatar"
        style="@style/small_avatar_image_view"
        android:layout_marginStart="@dimen/padding_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/cell_lobby_post_user_name"
        style="@style/text_small_green_light"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/padding_medium"
        android:layout_marginStart="@dimen/padding_medium"
        app:layout_constraintBottom_toBottomOf="@id/cell_lobby_post_avatar"
        app:layout_constraintLeft_toRightOf="@id/cell_lobby_post_avatar"
        app:layout_constraintRight_toLeftOf="@+id/cell_lobby_post_date"
        app:layout_constraintTop_toTopOf="@id/cell_lobby_post_avatar"
        tools:text="John Conor" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/cell_lobby_post_date"
        style="@style/text_small_grey_light"
        android:layout_marginEnd="@dimen/padding_default"
        app:layout_constraintBottom_toBottomOf="@id/cell_lobby_post_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cell_lobby_post_avatar"
        tools:text="8m" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/cell_lobby_post_content"
        style="@style/text_small_grey_light"
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/padding_default"
        android:layout_marginStart="@dimen/padding_default"
        android:layout_marginTop="@dimen/padding_medium"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cell_lobby_post_avatar"
        tools:text="@string/template_long_text" />

    <View
        android:id="@+id/cell_lobby_post_divider"
        style="@style/divider_horizontal"
        android:layout_marginTop="@dimen/padding_default"
        app:layout_constraintTop_toBottomOf="@id/cell_lobby_post_content" />
</android.support.constraint.ConstraintLayout>