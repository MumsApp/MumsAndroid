<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/widget_layout">

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/children_selection_widget_title"
        style="@style/text_normal_bold"
        android:text="@string/children"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mumsapp.android.ui.views.BaseImageButton
        android:id="@+id/children_selection_widget_add_female_icon"
        style="@style/default_image_button"
        android:paddingTop="@dimen/padding_12dp"
        android:paddingBottom="@dimen/padding_medium"
        android:src="@drawable/ic_female"
        android:layout_marginTop="@dimen/padding_default"
        app:layout_constraintLeft_toLeftOf="@+id/children_selection_widget_add_female_text"
        app:layout_constraintRight_toRightOf="@+id/children_selection_widget_add_female_text"
        app:layout_constraintTop_toBottomOf="@id/children_selection_widget_title"/>

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/children_selection_widget_add_female_text"
        style="@style/text_small_grey_light"
        android:text="@string/add_girl"
        app:layout_constraintTop_toBottomOf="@id/children_selection_widget_add_female_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/children_selection_widget_add_female_divider"/>

    <View
        android:id="@+id/children_selection_widget_add_female_divider"
        style="@style/divider_vertical"
        app:layout_constraintTop_toTopOf="@id/children_selection_widget_add_female_icon"
        app:layout_constraintBottom_toBottomOf="@id/children_selection_widget_add_female_text"
        app:layout_constraintLeft_toRightOf="@id/children_selection_widget_add_female_text"
        app:layout_constraintRight_toLeftOf="@+id/children_selection_widget_add_male_text"/>

    <com.mumsapp.android.ui.views.BaseImageButton
        android:id="@+id/children_selection_widget_add_male_icon"
        style="@style/default_image_button"
        android:paddingTop="@dimen/padding_12dp"
        android:paddingBottom="@dimen/padding_medium"
        android:src="@drawable/ic_male"
        android:layout_marginTop="@dimen/padding_default"
        app:layout_constraintLeft_toLeftOf="@+id/children_selection_widget_add_male_text"
        app:layout_constraintRight_toRightOf="@+id/children_selection_widget_add_male_text"
        app:layout_constraintTop_toBottomOf="@id/children_selection_widget_title"/>

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/children_selection_widget_add_male_text"
        style="@style/text_small_grey_light"
        android:text="@string/add_boy"
        app:layout_constraintTop_toTopOf="@id/children_selection_widget_add_female_text"
        app:layout_constraintBottom_toBottomOf="@id/children_selection_widget_add_female_text"
        app:layout_constraintLeft_toRightOf="@+id/children_selection_widget_add_female_divider"
        app:layout_constraintRight_toLeftOf="@+id/children_selection_widget_add_male_divider"/>

    <View
        android:id="@+id/children_selection_widget_add_male_divider"
        style="@style/divider_vertical"
        app:layout_constraintTop_toTopOf="@id/children_selection_widget_add_male_icon"
        app:layout_constraintBottom_toBottomOf="@id/children_selection_widget_add_male_text"
        app:layout_constraintLeft_toRightOf="@id/children_selection_widget_add_male_text"
        app:layout_constraintRight_toLeftOf="@+id/children_selection_widget_add_come_text"/>

    <com.mumsapp.android.ui.views.BaseImageButton
        android:id="@+id/children_selection_widget_add_come_icon"
        style="@style/default_image_button"
        android:paddingTop="@dimen/padding_12dp"
        android:paddingBottom="@dimen/padding_medium"
        android:src="@drawable/ic_come"
        android:layout_marginTop="@dimen/padding_default"
        app:layout_constraintLeft_toLeftOf="@+id/children_selection_widget_add_come_text"
        app:layout_constraintRight_toRightOf="@+id/children_selection_widget_add_come_text"
        app:layout_constraintTop_toBottomOf="@id/children_selection_widget_title"/>

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/children_selection_widget_add_come_text"
        style="@style/text_small_grey_light"
        android:text="@string/add_baby_on_board"
        app:layout_constraintTop_toTopOf="@id/children_selection_widget_add_female_text"
        app:layout_constraintBottom_toBottomOf="@id/children_selection_widget_add_female_text"
        app:layout_constraintLeft_toRightOf="@id/children_selection_widget_add_male_divider"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/children_selection_widget_divider"
        style="@style/divider_horizontal"
        android:layout_marginTop="@dimen/padding_default"
        app:layout_constraintTop_toBottomOf="@id/children_selection_widget_add_come_text"/>

    <com.mumsapp.android.ui.views.BaseRecyclerView
        android:id="@+id/children_selection_widget_recycler"
        style="@style/recycler_default"
        android:paddingEnd="@dimen/padding_default"
        android:paddingStart="@dimen/padding_default"
        app:layout_constraintTop_toBottomOf="@id/children_selection_widget_divider"
        tools:listitem="@layout/cell_children_selection_widget" />
</android.support.constraint.ConstraintLayout>