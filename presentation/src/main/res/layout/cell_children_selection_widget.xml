<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    style="@style/cell_layout"
    android:paddingTop="@dimen/padding_default">

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/cell_children_selection_name"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/padding_medium"
        style="@style/text_normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cell_children_selection_edit"
        tools:text="Girl 1 year old" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/cell_children_selection_edit"
        style="@style/text_normal_green_light"
        android:text="@string/edit"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>