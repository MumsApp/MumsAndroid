<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/widget_layout">

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/product_details_name"
        style="@style/text_normal"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/product_details_user_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Item one" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/product_details_category"
        style="@style/text_small_grey_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_details_name"
        tools:text="Category" />

    <com.mumsapp.android.ui.views.CircleImageView
        android:id="@+id/product_details_avatar"
        style="@style/tiny_avatar_image_view"
        app:layout_constraintBottom_toBottomOf="@id/product_details_category"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/product_details_name" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/product_details_user_name"
        style="@style/text_small_green_light"
        android:layout_marginEnd="@dimen/padding_medium"
        app:layout_constraintBottom_toBottomOf="@id/product_details_avatar"
        app:layout_constraintRight_toLeftOf="@id/product_details_avatar"
        app:layout_constraintTop_toTopOf="@id/product_details_avatar"
        tools:text="John D." />

    <View
        android:id="@+id/product_details_name_divider"
        style="@style/divider_horizontal"
        android:layout_marginTop="@dimen/padding_default"
        app:layout_constraintTop_toBottomOf="@id/product_details_category" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/product_details_price"
        style="@style/text_normal"
        android:layout_marginTop="@dimen/padding_default"
        app:layout_constraintTop_toBottomOf="@id/product_details_name_divider"
        tools:text="$55.00" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/product_details_distance"
        style="@style/text_small_grey_light"
        app:layout_constraintBottom_toBottomOf="@id/product_details_price"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="3 miles" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/product_details_description"
        style="@style/text_small_grey_light"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/padding_default"
        app:layout_constraintTop_toBottomOf="@id/product_details_price"
        tools:text="@string/template_long_text" />

    <com.mumsapp.android.ui.views.BaseButton
        android:id="@+id/product_details_contact_button"
        style="@style/button_green"
        android:layout_marginTop="@dimen/padding_default"
        android:text="@string/contact_user_to_make_an_offer"
        app:layout_constraintTop_toBottomOf="@id/product_details_description" />
</android.support.constraint.ConstraintLayout>