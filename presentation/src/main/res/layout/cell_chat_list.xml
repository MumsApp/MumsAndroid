<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/card_squared">

    <android.support.constraint.ConstraintLayout
        style="@style/widget_layout"
        android:paddingBottom="@dimen/padding_big"
        android:paddingTop="@dimen/padding_big">

        <com.mumsapp.android.ui.views.CircleImageView
            android:id="@+id/chat_list_cell_image"
            style="@style/avatar_image_view" />

        <com.mumsapp.android.ui.views.BaseImageView
            android:id="@+id/chat_list_cell_online_status"
            style="@style/default_image_view"
            app:layout_constraintTop_toTopOf="@id/chat_list_cell_image"
            app:layout_constraintRight_toRightOf="@id/chat_list_cell_image"
            android:visibility="visible"
            tools:visibility="visible"
            android:src="@drawable/ic_online"/>

        <com.mumsapp.android.ui.views.BaseImageView
            android:id="@+id/chat_list_cell_verification_status"
            style="@style/default_image_view"
            app:layout_constraintBottom_toBottomOf="@id/chat_list_cell_image"
            app:layout_constraintRight_toRightOf="@id/chat_list_cell_image"
            android:visibility="visible"
            tools:visibility="visible"
            android:src="@drawable/ic_verified"
            android:adjustViewBounds="true"/>

        <com.mumsapp.android.ui.views.BaseTextView
            android:id="@+id/chat_list_cell_title"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/padding_default"
            app:layout_constraintLeft_toRightOf="@id/chat_list_cell_image"
            app:layout_constraintRight_toLeftOf="@+id/chat_list_cell_read_indicator"
            tools:text="Layla Patrickson" />

        <com.mumsapp.android.ui.views.BaseTextView
            android:id="@+id/chat_list_cell_time"
            style="@style/text_small_grey_light"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/chat_list_cell_title"
            tools:text="17:56" />

        <com.mumsapp.android.ui.views.BaseImageView
            android:id="@+id/chat_list_cell_received_indicator"
            style="@style/default_image_view"
            android:layout_marginEnd="@dimen/padding_small"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/chat_list_cell_time"
            app:layout_constraintRight_toLeftOf="@id/chat_list_cell_time"
            app:layout_constraintTop_toTopOf="@id/chat_list_cell_time"
            tools:visibility="visible" />

        <com.mumsapp.android.ui.views.BaseImageView
            android:id="@+id/chat_list_cell_read_indicator"
            style="@style/default_image_view"
            android:layout_marginEnd="@dimen/padding_small"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/chat_list_cell_time"
            app:layout_constraintRight_toLeftOf="@id/chat_list_cell_received_indicator"
            app:layout_constraintTop_toTopOf="@id/chat_list_cell_time"
            tools:visibility="visible" />

        <com.mumsapp.android.ui.views.BaseTextView
            android:id="@+id/lobby_cell_description"
            style="@style/text_small_grey_light"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/padding_small"
            android:maxLines="2"
            app:layout_constraintLeft_toLeftOf="@id/chat_list_cell_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat_list_cell_title"
            tools:text="@string/template_long_text" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
