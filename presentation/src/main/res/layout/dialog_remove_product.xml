<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_dialog_layout"
    android:background="@color/white">

    <com.mumsapp.android.ui.views.TopBar
        android:id="@+id/remove_product_top_bar"
        style="@style/top_bar_close"
        app:topBarTitle="@string/are_you_sure_you_want_to_remove" />

    <View
        android:id="@+id/remove_product_custom_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/main_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remove_product_top_bar"
        app:layout_constraintBottom_toTopOf="@+id/remove_product_bottom_divider"/>

    <com.mumsapp.android.ui.views.CircleImageView
        android:id="@+id/remove_product_image"
        style="@style/avatar_image_view"
        android:layout_marginEnd="@dimen/padding_medium"
        android:layout_marginTop="@dimen/padding_default"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/remove_product_name"
        app:layout_constraintTop_toBottomOf="@id/remove_product_top_bar" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/remove_product_name"
        style="@style/text_normal_green_light"
        android:layout_marginStart="@dimen/padding_medium"
        app:layout_constraintBottom_toBottomOf="@id/remove_product_image"
        app:layout_constraintLeft_toRightOf="@id/remove_product_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/remove_product_image"
        tools:text="Sample Item" />
    
    <View
        android:id="@+id/remove_product_bottom_divider"
        style="@style/divider_horizontal"
        android:layout_marginTop="@dimen/padding_default"
        app:layout_constraintTop_toBottomOf="@id/remove_product_image"/>
    
    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/remove_product_bottom_text"
        style="@style/text_normal"
        android:layout_marginTop="@dimen/padding_default"
        android:textSize="@dimen/text_size_top_bar"
        tools:text="@string/from_your_wishlist_question_mark"
        app:layout_constraintTop_toBottomOf="@id/remove_product_bottom_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.mumsapp.android.ui.views.BaseButton
        android:id="@+id/remove_product_yes_button"
        style="@style/button_dialog"
        android:layout_marginTop="@dimen/padding_default"
        android:text="@string/yes_coma_remove"
        app:layout_constraintTop_toBottomOf="@id/remove_product_bottom_text"/>
</android.support.constraint.ConstraintLayout>