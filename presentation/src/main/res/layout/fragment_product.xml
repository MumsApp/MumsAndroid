<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/default_layout">

    <com.mumsapp.android.ui.views.TopBar
        android:id="@+id/product_top_bar"
        style="@style/top_bar_back"
        app:layout_constraintTop_toTopOf="parent"
        app:topBarTitle="@string/product" />

    <android.support.v4.widget.NestedScrollView
        style="@style/default_scroll"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_top_bar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_scroll_view_bottom">

            <com.mumsapp.android.ui.views.ImagesSlider
                android:id="@+id/product_image_slider"
                style="@style/default_image_slider"
                android:layout_height="@dimen/product_big_image_height"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.mumsapp.android.ui.widgets.ProductDetailsWidget
                android:id="@+id/product_product_details_widget"
                style="@style/default_widget"
                app:layout_constraintTop_toBottomOf="@id/product_image_slider" />

            <com.mumsapp.android.ui.widgets.LocationWidget
                android:id="@+id/product_location_widget"
                style="@style/location_widget_without_buttons"
                app:layout_constraintTop_toBottomOf="@id/product_product_details_widget" />

            <View
                style="@style/empty_view_below_card"
                app:layout_constraintTop_toBottomOf="@id/product_location_widget"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>