<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/default_layout">

    <com.mumsapp.android.ui.views.TopBar
        android:id="@+id/add_product_top_bar"
        style="@style/top_bar_back"
        app:layout_constraintTop_toTopOf="parent"
        app:topBarTitle="@string/add_product" />

    <android.support.v4.widget.NestedScrollView
        style="@style/default_scroll"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_product_top_bar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_scroll_view_bottom">

            <View
                android:id="@+id/add_product_add_image_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/product_big_image_height"
                android:background="@color/image_placeholder_background"
                app:layout_constraintTop_toTopOf="parent" />

            <com.mumsapp.android.ui.views.BaseImageView
                android:id="@+id/add_product_add_image_button"
                style="@style/default_image_view"
                android:src="@drawable/ic_add_photo_grey"
                app:layout_constraintBottom_toTopOf="@id/add_product_add_image_text"
                app:layout_constraintLeft_toLeftOf="@id/add_product_add_image_background"
                app:layout_constraintRight_toRightOf="@id/add_product_add_image_background"
                app:layout_constraintTop_toTopOf="@id/add_product_add_image_background"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.mumsapp.android.ui.views.BaseTextView
                android:id="@+id/add_product_add_image_text"
                style="@style/text_big_image_placeholder"
                android:layout_marginTop="@dimen/padding_medium"
                android:text="@string/add_photo"
                app:layout_constraintBottom_toBottomOf="@id/add_product_add_image_background"
                app:layout_constraintLeft_toLeftOf="@id/add_product_add_image_background"
                app:layout_constraintRight_toRightOf="@id/add_product_add_image_background"
                app:layout_constraintTop_toBottomOf="@id/add_product_add_image_button" />

            <com.mumsapp.android.ui.views.BaseImageView
                android:id="@+id/add_product_image_header"
                style="@style/default_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/product_big_image_height"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent" />

            <com.mumsapp.android.ui.widgets.EditProductDetailsWidget
                android:id="@+id/add_product_product_details_widget"
                style="@style/default_widget"
                app:layout_constraintTop_toBottomOf="@id/add_product_image_header" />

            <com.mumsapp.android.ui.widgets.LocationWidget
                android:id="@+id/add_product_location_widget"
                style="@style/add_product_location_widget"
                app:layout_constraintTop_toBottomOf="@id/add_product_product_details_widget" />
            
            <com.mumsapp.android.ui.views.BaseButton
                android:id="@+id/add_product_upload_button"
                style="@style/button_green"
                android:layout_marginTop="@dimen/padding_12dp"
                android:layout_marginStart="@dimen/padding_medium"
                android:layout_marginEnd="@dimen/padding_medium"
                app:layout_constraintLeft_toLeftOf="@id/add_product_location_widget"
                app:layout_constraintRight_toRightOf="@id/add_product_location_widget"
                app:layout_constraintTop_toBottomOf="@id/add_product_location_widget"
                android:text="@string/upload_product"/>

            <View
                style="@style/empty_view_below_card"
                app:layout_constraintTop_toBottomOf="@id/add_product_upload_button" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>