<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/default_layout"
    android:background="@color/main_background"
    android:paddingLeft="@dimen/padding_default"
    android:paddingRight="@dimen/padding_default">

    <com.mumsapp.android.ui.views.BaseImageView
        android:id="@+id/auth_menu_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintVertical_chainStyle="packed"/>

    <com.mumsapp.android.ui.views.BaseButton
        android:id="@+id/auth_menu_sign_up"
        style="@style/button_green"
        android:text="@string/sign_up"
        app:layout_constraintTop_toBottomOf="@id/auth_menu_logo"
        app:layout_constraintBottom_toTopOf="@+id/auth_menu_sign_in"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.3"/>

    <com.mumsapp.android.ui.views.BaseButton
        android:id="@+id/auth_menu_sign_in"
        style="@style/button_grey"
        android:layout_marginTop="@dimen/padding_default"
        android:text="@string/sign_in"
        app:layout_constraintTop_toBottomOf="@id/auth_menu_sign_up"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/auth_menu_create_page"
        style="@style/text_big_blue_light"
        android:text="@string/create_official_page"
        app:layout_constraintTop_toBottomOf="@id/auth_menu_sign_in"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>