<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_layout">

    <com.mumsapp.android.ui.views.TopBar
        android:id="@+id/my_profile_top_bar"
        style="@style/top_bar_gear"
        app:layout_constraintTop_toTopOf="parent"
        app:topBarTitle="@string/my_profile" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_profile_top_bar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_scroll_view_bottom">

            <com.mumsapp.android.ui.views.CircleImageView
                android:id="@+id/my_profile_avatar"
                style="@style/avatar_image_view"
                android:layout_marginStart="@dimen/padding_default"
                android:layout_marginTop="@dimen/padding_default"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.mumsapp.android.ui.views.BaseTextView
                android:id="@+id/my_profile_name"
                style="@style/text_normal"
                android:layout_marginStart="@dimen/padding_default"
                app:layout_constraintBottom_toTopOf="@+id/my_profile_change_name"
                app:layout_constraintLeft_toRightOf="@id/my_profile_avatar"
                app:layout_constraintTop_toTopOf="@id/my_profile_avatar"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Alice Thompson" />

            <com.mumsapp.android.ui.views.BaseTextView
                android:id="@+id/my_profile_change_name"
                style="@style/text_small_green_light"
                android:layout_marginStart="@dimen/padding_default"
                android:text="@string/change"
                app:layout_constraintBottom_toBottomOf="@id/my_profile_avatar"
                app:layout_constraintLeft_toRightOf="@id/my_profile_avatar"
                app:layout_constraintTop_toBottomOf="@id/my_profile_name" />

            <com.mumsapp.android.ui.views.BaseTextView
                android:id="@+id/my_profile_description"
                style="@style/text_small_grey_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_12dp"
                android:layout_marginStart="@dimen/padding_12dp"
                android:layout_marginTop="@dimen/padding_12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_profile_avatar"
                tools:text="@string/template_long_text" />

            <com.mumsapp.android.ui.views.LocationWidget
                android:id="@+id/my_profile_location_widget"
                style="@style/my_profile_location_widget"
                android:layout_marginTop="@dimen/padding_default"
                app:layout_constraintTop_toBottomOf="@id/my_profile_description" />

            <com.mumsapp.android.ui.views.ChildrenSelectionWidget
                android:id="@+id/my_profile_children_selection_widget"
                style="@style/my_profile_widget"
                app:layout_constraintTop_toBottomOf="@id/my_profile_location_widget" />

            <com.mumsapp.android.ui.views.SchoolsWidget
                android:id="@+id/my_profile_schools_widget"
                style="@style/my_profile_widget"
                app:layout_constraintTop_toBottomOf="@id/my_profile_children_selection_widget" />

            <com.mumsapp.android.ui.views.MumsAppOffersWidget
                android:id="@+id/my_profile_mums_app_offers_widget"
                style="@style/my_profile_widget"
                app:layout_constraintTop_toBottomOf="@id/my_profile_schools_widget"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_small"
                app:layout_constraintTop_toBottomOf="@id/my_profile_mums_app_offers_widget"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>