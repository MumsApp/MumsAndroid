<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/card_squared">

    <android.support.constraint.ConstraintLayout
        style="@style/widget_layout"
        android:paddingBottom="@dimen/padding_12dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp">

        <com.mumsapp.android.ui.views.BaseImageView
            android:id="@+id/my_wishlist_cell_image"
            style="@style/grid_products_image_view"
            app:layout_constraintTop_toTopOf="parent" />

        <com.mumsapp.android.ui.views.BaseCheckbox
            android:id="@+id/my_wishlist_cell_checkbox"
            style="@style/heart_checkbox"
            android:layout_marginEnd="@dimen/padding_small"
            android:layout_marginTop="@dimen/padding_small"
            android:checked="true"
            app:layout_constraintRight_toRightOf="@id/my_wishlist_cell_image"
            app:layout_constraintTop_toTopOf="@id/my_wishlist_cell_image" />

        <com.mumsapp.android.ui.views.BaseTextView
            android:id="@+id/my_wishlist_cell_distance"
            style="@style/text_small_grey_light"
            android:layout_marginBottom="@dimen/padding_medium"
            android:layout_marginEnd="@dimen/padding_small"
            app:layout_constraintBottom_toBottomOf="@id/my_wishlist_cell_image"
            app:layout_constraintRight_toRightOf="@id/my_wishlist_cell_image"
            tools:text="5 miles" />

        <com.mumsapp.android.ui.views.BaseTextView
            android:id="@+id/my_wishlist_cell_product_name"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/padding_12dp"
            android:layout_marginStart="@dimen/padding_12dp"
            android:layout_marginTop="@dimen/padding_medium"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_wishlist_cell_image"
            tools:text="Item one" />

        <com.mumsapp.android.ui.views.BaseTextView
            android:id="@+id/my_wishlist_cell_category"
            style="@style/text_small_grey_light"
            android:includeFontPadding="false"
            app:layout_constraintLeft_toLeftOf="@id/my_wishlist_cell_product_name"
            app:layout_constraintTop_toBottomOf="@id/my_wishlist_cell_product_name"
            tools:text="Category" />

        <com.mumsapp.android.ui.views.BaseTextView
            android:id="@+id/my_wishlist_cell_price"
            style="@style/text_normal"
            android:layout_marginTop="@dimen/padding_medium"
            app:layout_constraintLeft_toLeftOf="@id/my_wishlist_cell_product_name"
            app:layout_constraintTop_toBottomOf="@id/my_wishlist_cell_category"
            tools:text="$55.00" />

        <com.mumsapp.android.ui.views.CircleImageView
            android:id="@+id/my_wishlist_cell_avatar"
            style="@style/tiny_avatar_image_view"
            android:layout_marginTop="@dimen/padding_medium"
            app:layout_constraintLeft_toLeftOf="@id/my_wishlist_cell_product_name"
            app:layout_constraintTop_toBottomOf="@id/my_wishlist_cell_price" />

        <com.mumsapp.android.ui.views.BaseTextView
            android:id="@+id/my_wishlist_cell_user_name"
            style="@style/text_small_green_light"
            android:layout_marginStart="@dimen/padding_medium"
            app:layout_constraintBottom_toBottomOf="@id/my_wishlist_cell_avatar"
            app:layout_constraintLeft_toRightOf="@id/my_wishlist_cell_avatar"
            app:layout_constraintTop_toTopOf="@id/my_wishlist_cell_avatar"
            tools:text="John P." />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>