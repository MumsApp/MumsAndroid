<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card_squared"
    android:layout_width="@dimen/product_photos_cell_width"
    android:layout_height="@dimen/product_photos_cell_height">

    <android.support.constraint.ConstraintLayout style="@style/default_layout">

        <com.mumsapp.android.ui.views.BaseImageView
            android:id="@+id/organisation_photo_cell_image"
            style="@style/default_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>