<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_layout">

    <com.mumsapp.android.ui.views.TopBar
        android:id="@+id/my_wishlist_top_bar"
        style="@style/top_bar_back"
        app:layout_constraintTop_toTopOf="parent"
        app:topBarTitle="@string/my_wishlist" />

    <android.support.v4.widget.NestedScrollView
        style="@style/default_scroll"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_wishlist_top_bar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_scroll_view_bottom">

            <com.mumsapp.android.ui.views.GridRecyclerView
                android:id="@+id/my_wishlist_recycler_view"
                style="@style/default_grid_recycler"
                android:layout_height="wrap_content"
                tools:listitem="@layout/cell_my_wishlist"/>

            <View
                style="@style/empty_view_below_card"
                app:layout_constraintTop_toBottomOf="@id/my_wishlist_recycler_view"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>