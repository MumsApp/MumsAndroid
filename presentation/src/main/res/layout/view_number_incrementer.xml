<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/number_incrementer_minus"
        style="@style/text_small_green_light"
        android:background="@drawable/input_with_border_left_radius_background"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_default"
        android:paddingStart="@dimen/padding_default"
        android:paddingTop="@dimen/padding_medium"
        android:text="@string/minus" />

    <View
        style="@style/divider_horizontal"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="@id/number_incrementer_value"
        app:layout_constraintRight_toRightOf="@id/number_incrementer_value"
        app:layout_constraintTop_toTopOf="@id/number_incrementer_value" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/number_incrementer_value"
        style="@style/text_small"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_12dp"
        android:paddingStart="@dimen/padding_12dp"
        android:paddingTop="@dimen/padding_medium"
        app:layout_constraintLeft_toRightOf="@id/number_incrementer_minus"
        tools:text="0" />

    <View
        style="@style/divider_horizontal"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="@id/number_incrementer_value"
        app:layout_constraintLeft_toLeftOf="@id/number_incrementer_value"
        app:layout_constraintRight_toRightOf="@id/number_incrementer_value" />

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/number_incrementer_plus"
        style="@style/text_small_green_light"
        android:background="@drawable/input_with_border_right_radius_background"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_default"
        android:paddingStart="@dimen/padding_default"
        android:paddingTop="@dimen/padding_medium"
        android:text="@string/plus"
        app:layout_constraintLeft_toRightOf="@id/number_incrementer_value" />
</android.support.constraint.ConstraintLayout>