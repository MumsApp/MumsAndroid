<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/cell_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.mumsapp.android.ui.views.CircleImageView
        android:id="@+id/cell_members_widget_avatar"
        style="@style/small_avatar_image_view"/>

    <com.mumsapp.android.ui.views.BaseTextView
        android:id="@+id/cell_members_widget_text"
        style="@style/text_normal"
        tools:text="+7"
        app:layout_constraintTop_toTopOf="@id/cell_members_widget_avatar"
        app:layout_constraintLeft_toLeftOf="@id/cell_members_widget_avatar"
        app:layout_constraintRight_toRightOf="@id/cell_members_widget_avatar"
        app:layout_constraintBottom_toBottomOf="@id/cell_members_widget_avatar"/>
</android.support.constraint.ConstraintLayout>