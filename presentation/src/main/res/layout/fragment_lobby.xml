<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_layout">

    <com.mumsapp.android.ui.views.TopBar
        android:id="@+id/lobby_top_bar"
        style="@style/top_bar_filters_search"
        app:layout_constraintTop_toTopOf="parent"
        app:topBarTitle="@string/the_lobby" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/lobby_top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mumsapp.android.ui.views.CardsRecyclerView
                android:id="@+id/lobby_recycler_view"
                style="@style/recycler_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/cell_lobby"/>

            <com.mumsapp.android.ui.views.BaseButton
                android:id="@+id/lobby_add_category"
                style="@style/button_white_background_card"
                android:layout_marginTop="@dimen/padding_12dp"
                android:layout_marginStart="@dimen/padding_12dp"
                android:layout_marginEnd="@dimen/padding_12dp"
                android:text="@string/plus_add_category"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_scroll_view_bottom"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>