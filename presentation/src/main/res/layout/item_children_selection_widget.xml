<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/card_squared">

    <android.support.constraint.ConstraintLayout
        style="@style/widget_layout">

        <com.mumsapp.android.ui.views.BaseTextView
            android:id="@+id/children_selection_widget_title"
            style="@style/text_normal_bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/children"/>

        <com.mumsapp.android.ui.views.BaseButton
            android:id="@+id/children_selection_widget_plus"
            style="@style/button_plus"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/children_selection_widget_title"
            android:layout_marginTop="@dimen/padding_default"/>

        <com.mumsapp.android.ui.views.BaseButton
            android:id="@+id/children_selection_widget_minus"
            style="@style/button_minus"
            android:layout_marginEnd="@dimen/padding_small"
            app:layout_constraintRight_toLeftOf="@id/children_selection_widget_plus"
            app:layout_constraintTop_toTopOf="@id/children_selection_widget_plus"/>

        <TextView
            android:id="@+id/children_selection_widget_children_count"
            android:layout_marginEnd="@dimen/padding_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/children_selection_widget_minus"
            app:layout_constraintTop_toTopOf="@id/children_selection_widget_plus"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>