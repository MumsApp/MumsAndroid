<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="default_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/main_background</item>
    </style>

    <style name="default_dialog_layout" parent="default_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_big</item>
    </style>

    <style name="default_scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="default_scroll_layout" parent="default_layout">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Buttons -->
    <style name="button_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_default_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_green" parent="button_default">
        <item name="android:background">@drawable/btn_green</item>
    </style>

    <style name="button_grey" parent="button_default">
        <item name="android:background">@drawable/btn_grey</item>
    </style>

    <style name="square_button_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="square_button_small" parent="square_button_default">
        <item name="android:layout_width">@dimen/square_button_small_size</item>
        <item name="android:layout_height">@dimen/square_button_small_size</item>
        <item name="android:textSize">@dimen/square_button_small_text_size</item>
    </style>
    
    <style name="button_plus" parent="square_button_small">
        <item name="android:text">@string/plus</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_square_green_small</item>
    </style>

    <style name="button_minus" parent="square_button_small">
        <item name="android:text">@string/minus</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_square_grey_small</item>
    </style>

    <style name="button_white_background" parent="button_default">
        <item name="android:textColor">@color/green_light</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="button_dialog" parent="button_green">
        <item name="android:layout_marginTop">@dimen/padding_default</item>
        <item name="android:layout_marginStart">@dimen/padding_default</item>
        <item name="android:layout_marginEnd">@dimen/padding_default</item>
    </style>

    <!-- Text Views -->
    <style name="text_view_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_top_bar_title" parent="text_view_default">
        <item name="android:textSize">@dimen/text_size_top_bar</item>
    </style>

    <style name="text_tiny" parent="text_view_default">
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <style name="text_small" parent="text_view_default">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="text_normal" parent="text_view_default">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_big" parent="text_view_default">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="text_huge" parent="text_view_default">
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <style name="text_normal_blue_light" parent="text_normal">
        <item name="android:textColor">@color/blue_light</item>
    </style>

    <style name="text_big_blue_light" parent="text_big">
        <item name="android:textColor">@color/blue_light</item>
    </style>

    <style name="text_normal_grey_light" parent="text_normal">
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="text_normal_green_light" parent="text_normal">
        <item name="android:textColor">@color/green_light</item>
    </style>

    <style name="text_normal_bold" parent="text_normal">
        <item name="fontPath">fonts/Poppins-Bold.ttf</item>
    </style>

    <style name="text_small_green_light" parent="text_small">
        <item name="android:textColor">@color/green_light</item>
    </style>

    <style name="text_small_grey_light" parent="text_small">
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="text_tiny_grey_light" parent="text_tiny">
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="text_tiny_black" parent="text_tiny">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_tiny_green_light" parent="text_tiny">
        <item name="android:textColor">@color/green_light</item>
    </style>

    <style name="text_google_plus" parent="text_normal">
        <item name="android:drawablePadding">@dimen/padding_medium</item>
        <item name="android:textColor">@color/google_plus</item>
        <item name="android:drawableLeft">@drawable/ic_google_plus</item>
        <item name="android:text">@string/sign_up_google</item>
    </style>

    <style name="text_facebook" parent="text_normal">
        <item name="android:drawablePadding">@dimen/padding_medium</item>
        <item name="android:textColor">@color/facebook</item>
        <item name="android:drawableLeft">@drawable/ic_facebook</item>
        <item name="android:text">@string/sign_up_facebook</item>
    </style>

    <style name="main_menu_button_text" parent="text_small">
        <item name="android:textColor">@color/menu_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/menu_labels_text_size</item>
    </style>

    <style name="default_text_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:background">@drawable/text_container_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_container_small" parent="default_text_container">
        <item name="android:layout_width">@dimen/text_container_small_width</item>
        <item name="android:layout_height">@dimen/text_container_small_height</item>
    </style>

    <!-- Dividers -->
    <style name="divider_default">
        <item name="android:background">@color/default_divider</item>
    </style>

    <style name="divider_horizontal" parent="divider_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_horizontal_height</item>
    </style>


    <!-- Top bar -->
    <style name="top_bar_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="top_bar_back" parent="top_bar_default">
        <item name="topBarLeftButtonVisible">true</item>
        <item name="topBarLeftIcon">@drawable/ic_back</item>
        <item name="topBarRightButtonVisible">false</item>
    </style>

    <style name="top_bar_gear" parent="top_bar_default">
        <item name="topBarLeftButtonVisible">false</item>
        <item name="topBarRightButtonVisible">true</item>
        <item name="topBarRightIcon">@drawable/ic_gear</item>
    </style>

    <style name="top_bar_close" parent="top_bar_default">
        <item name="topBarLeftButtonVisible">false</item>
        <item name="topBarRightButtonVisible">true</item>
        <item name="topBarRightIcon">@drawable/ic_close</item>
    </style>


    <!--Forms -->
    <style name="default_form_theme">
        <item name="colorAccent">@color/default_divider</item>
        <item name="colorControlNormal">@color/default_divider</item>
        <item name="colorControlActivated">@color/black_light</item>
        <item name="colorControlHighlight">@color/black_light</item>
    </style>

    <style name="default_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/form_padding_vertical</item>
        <item name="android:layout_marginStart">@dimen/content_padding_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/content_padding_horizontal</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textColorHint">@color/black_light</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:theme">@style/default_form_theme</item>
    </style>

    <style name="dialog_form" parent="default_form">
        <item name="android:layout_marginStart">@dimen/padding_default</item>
        <item name="android:layout_marginEnd">@dimen/padding_default</item>
    </style>

    <!-- Card View -->
    <style name="cardview_default" parent="CardView">
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="card_squared" parent="cardview_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">@dimen/card_view_default_elevation</item>
    </style>

    <style name="card_rounded" parent="cardview_default">
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
    </style>

    <!-- Image Button -->
    <style name="default_image_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="main_menu_button" parent="default_image_button">
        <item name="layout_constraintCircleRadius">@dimen/menu_radius</item>
    </style>

    <style name="topbar_button" parent="default_image_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
    </style>


    <!-- Image View -->
    <style name="default_image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="avatar_image_view" parent="default_image_view">
        <item name="android:layout_width">@dimen/my_profile_avatar_size</item>
        <item name="android:layout_height">@dimen/my_profile_avatar_size</item>
        <item name="android:src">@drawable/menu_me</item>
    </style>


    <!-- Switch -->
    <style name="default_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="switch_green" parent="default_switch">
        <item name="colorAccent">@color/green_light</item>
        <item name="colorSwitchThumbNormal">@color/grey_light</item>
    </style>

    <style name="switch_settings" parent="switch_green">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
    </style>

    <!-- Widgets -->
    <style name="widget_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="my_profile_widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_12dp</item>
        <item name="android:layout_marginStart">@dimen/padding_medium</item>
        <item name="android:layout_marginEnd">@dimen/padding_medium</item>
    </style>

    <!-- Location Widget -->
    <style name="default_location_widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_medium</item>
        <item name="android:layout_marginEnd">@dimen/padding_medium</item>
    </style>

    <style name="my_profile_location_widget" parent="default_location_widget">
        <item name="switchVisible">true</item>
        <item name="switchDefaultValue">false</item>
        <item name="buttonVisible">true</item>
        <item name="buttonText">@string/edit</item>
        <item name="mapVisible">false</item>
    </style>


    <!-- Seek Bar -->
    <style name="default_seek_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="green_seek_bar" parent="default_seek_bar">
        <item name="bar_color">@color/grey_light</item>
        <item name="bar_highlight_color">@color/green_light</item>
        <item name="left_thumb_color">@color/green_light</item>
        <item name="right_thumb_color">@color/green_light</item>
        <item name="left_thumb_color_pressed">@color/green_light</item>
        <item name="right_thumb_color_pressed">@color/green_light</item>
    </style>
</resources>
