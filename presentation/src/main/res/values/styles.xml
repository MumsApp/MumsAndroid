<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="default_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/main_background</item>
    </style>

    <style name="default_scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="default_scroll_layout" parent="default_layout">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Buttons -->
    <style name="button_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_default_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_green" parent="button_default">
        <item name="android:background">@drawable/btn_green</item>
    </style>

    <style name="button_grey" parent="button_default">
        <item name="android:background">@drawable/btn_grey</item>
    </style>

    <style name="square_button_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Text Views -->
    <style name="text_view_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_small" parent="text_view_default">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="text_normal" parent="text_view_default">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_big" parent="text_view_default">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="text_huge" parent="text_view_default">
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <style name="text_normal_blue_light" parent="text_normal">
        <item name="android:textColor">@color/blue_light</item>
    </style>

    <style name="text_big_blue_light" parent="text_big">
        <item name="android:textColor">@color/blue_light</item>
    </style>

    <style name="text_normal_grey_light" parent="text_normal">
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="text_google_plus" parent="text_normal">
        <item name="android:drawablePadding">@dimen/padding_medium</item>
        <item name="android:textColor">@color/google_plus</item>
        <item name="android:drawableLeft">@drawable/ic_google_plus</item>
        <item name="android:text">@string/sign_up_google</item>
    </style>

    <style name="text_facebook" parent="text_normal">
        <item name="android:drawablePadding">@dimen/padding_medium</item>
        <item name="android:textColor">@color/facebook</item>
        <item name="android:drawableLeft">@drawable/ic_facebook</item>
        <item name="android:text">@string/sign_up_facebook</item>
    </style>


    <!-- Dividers -->
    <style name="divider_default">
        <item name="android:background">@color/default_divider</item>
    </style>

    <style name="divider_horizontal" parent="divider_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_horizontal_height</item>
    </style>


    <!-- Top bar -->
    <style name="top_bar_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="top_bar_back" parent="top_bar_default">
        <item name="topBarBackVisible">true</item>
        <item name="topBarRightButtonVisible">false</item>
    </style>


    <!--Forms -->
    <style name="default_form_theme">
        <item name="colorAccent">@color/default_divider</item>
        <item name="colorControlNormal">@color/default_divider</item>
        <item name="colorControlActivated">@color/black_light</item>
        <item name="colorControlHighlight">@color/black_light</item>
    </style>

    <style name="default_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/form_padding_vertical</item>
        <item name="android:layout_marginStart">@dimen/content_padding_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/content_padding_horizontal</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textColorHint">@color/black_light</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:theme">@style/default_form_theme</item>
    </style>

    <!-- Card View -->
    <style name="card_squared" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">@dimen/card_view_default_elevation</item>
    </style>

    <style name="card_rounded" parent="card_squared">
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
    </style>

</resources>
