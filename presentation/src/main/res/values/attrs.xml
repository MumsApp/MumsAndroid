<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TopBar">
        <attr name="topBarTitle" format="string"/>
        <attr name="topBarLeftButtonVisible" format="boolean"/>
        <attr name="topBarLeftIcon" format="reference"/>
        <attr name="topBarRightButtonVisible" format="boolean"/>
        <attr name="topBarRightIcon" format="reference"/>
        <attr name="topBarRightTextVisible" format="boolean"/>
        <attr name="topBarRightText" format="string"/>
        <attr name="searchVisible" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TextAttributes">
        <attr name="text" format="string"/>
    </declare-styleable>
    
    <declare-styleable name="SquareButton">
        <attr name="image" format="reference"/>
    </declare-styleable>

    <declare-styleable name="LocationWidget">
        <attr name="locationName" format="string"/>
        <attr name="switchVisible" format="boolean"/>
        <attr name="switchDefaultValue" format="boolean"/>
        <attr name="buttonVisible" format="boolean"/>
        <attr name="buttonText" format="string"/>
        <attr name="mapVisible" format="boolean"/>
        <attr name="mapLatitude" format="string"/>
        <attr name="mapLongitude" format="string"/>
    </declare-styleable>

    <declare-styleable name="RoundedCornersImageView">
        <attr name="cornerRadius" format="float"/>
    </declare-styleable>

    <declare-styleable name="RangeSelector">
        <attr name="label" format="string"/>
        <attr name="minValue" format="float"/>
        <attr name="maxValue" format="float"/>
    </declare-styleable>

    <declare-styleable name="GridRecyclerView">
        <attr name="columnsCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="BaseButton">
        <attr name="alignedDrawableLeft" format="reference"/>
        <attr name="alignedDrawablePadding" format="dimension"/>
    </declare-styleable>
</resources>